{% extends 'base.html.twig' %}

{% block title %}Hello SessionController!{% endblock %}

{% block body %}

    <h1>   {{ session.nom }} </h1>

    <p> Formation: {{ session.formation.nom }} </p>
    <p> Date début: {{ session.dateDebut| date('d-m-Y')}} </p>
    <p> Date fin: {{ session.dateFin| date('d-m-Y')}} </p>
    <p> Inscrit: {{ session.stagiaires | length }}/{{ session.placeTotal }} </p>
    {% if session.stagiaires | length == session.placeTotal %}
            <p> Complet</p>
        {% else %}
            <p> Incomplet</p>
    {% endif %}


    <h2>Stagiare inscrit</h2>

    <table>
        <tr>
          <th>Prénom</th>
          <th>Nom</th>
        </tr>
        <tr>
            {% for stagiaire in session.stagiaires %}
                <td>{{stagiaire.nom}}</td>
                <td>{{stagiaire.prenom}}</td>
            {% endfor %}
        </tr>
    </table>

    <h2>Modulé ajouté</h2>

    <table>
        <tr>
          <th>Nom</th>
        </tr>
        <tr>
            {% for programme in session.programmes %}
                <td>{{programme.module.nom}}</td>
            {% endfor %}
        </tr>
    </table>
    
    <h2>Stagiare non-inscrit</h2>

    <table>
        <tr>
          <th>Prénom</th>
          <th>Nom</th>
        </tr>
        <tr>
            {% for stagiaire in stagiairesNI %}
                <td>{{stagiaire.nom}}</td>
                <td>{{stagiaire.prenom}}</td>
            {% endfor %}
        </tr>
    </table>

{% endblock %}
