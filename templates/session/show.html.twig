{% extends 'base.html.twig' %}

{% block title %}Hello SessionController!{% endblock %}

{% block body %}
    <div class="orangeBG">
    <h1>   {{ session.nom }} </h1>
    <p><a href="{{ path('edit_session',{'id': session.id}) }}" >modifier</a></p>

    <p class="infoBox"> Formation: {{ session.formation.nom }} </p>
    <p class="infoBox"> Date début: {{ session.dateDebut| date('d-m-Y')}} </p>
    <p class="infoBox"> Date fin: {{ session.dateFin| date('d-m-Y')}} </p>
    <p class="infoBox"> Inscrit: {{ session.stagiaires | length }}/{{ session.placeTotal }} </p>
    {% if session.stagiaires | length == session.placeTotal %}
            <p class="complet"> Complet</p>
        {% else %}
            <p class="incomplet"> Incomplet</p>
    {% endif %}


    <h2>Stagiare inscrit</h2>
    <table class="sessionBox">
        <tr>
          <th>Prénom</th>
          <th>Nom</th>
          <th>Ajouté</th>
        </tr>
        
        {% for stagiaire in session.stagiaires %}
            <tr>
                <td><a href="{{ path('show_stagiaire' ,{'id': stagiaire.id}) }}">{{stagiaire.nom}}<a></td>
                <td><a href="{{ path('show_stagiaire' ,{'id': stagiaire.id}) }}">{{stagiaire.prenom}}<a></td>
                <th><a href="{{ path('remove_stagiaire' ,{'stagiaire_id': stagiaire.id,'session_id': stagiaire.id}) }}"><i class="fa-solid fa-minus"></i></a></th>
            </tr>    
        {% endfor %}
        
    </table>

    <h2>Modulé ajouté</h2>
    <table class="sessionBox">
        <tr>
          <th>Nom</th>
          <th>Retiré</th>
        </tr>
        
        {% for programme in session.programmes %}
            <tr>
                <td>{{programme.module.nom}}</td>
            </tr>
        {% endfor %}
        
    </table>
    
    <h2>Stagiare non-inscrit</h2>
    <table class="sessionBox">
        <tr>
          <th>Prénom</th>
          <th>Nom</th>
          <th>Ajouté</th>
        </tr>
        
        {% for stagiaire in stagiairesNI %}
            <tr>
                <td><a href="{{ path('show_stagiaire' ,{'id': stagiaire.id}) }}">{{stagiaire.nom}}</a></td>
                <td><a href="{{ path('show_stagiaire' ,{'id': stagiaire.id}) }}">{{stagiaire.prenom}}</a></td>
                <td><a href="{{ path('add_stagiaire' ,{'stagiaire_id': stagiaire.id,'session_id': stagiaire.id}) }}"><i class="fa-solid fa-minus"></i></a></td>
            </tr>
        {% endfor %}
        
    </table>

    <h2>Module ajoutable</h2>
    <table class="sessionBox">
        <tr>
          <th>nom</th>
          <th>Ajouté</th>
        </tr>
        
        {% for module in moduleAjoutable %}
            <tr>
                <th>{{ module.nom}}</th>
                <th><a href="#"><i class="fa-solid fa-plus"></i></a></th>
            </tr>
        {% endfor %}
    </table>
    </div>
{% endblock %}
