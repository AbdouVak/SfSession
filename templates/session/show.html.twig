{% extends 'base.html.twig' %}

{% block title %}Hello SessionController!{% endblock %}

{% block body %}
    <div>
    <h1>   {{ session.nom }} </h1>
    <p><a href="{{ path('edit_session',{'id': session.id}) }}" >modifier</a></p>

    <p> Formation: {{ session.formation.nom }} </p>
    <p> Formateur: <a href="{{ path('show_formateur' ,{'id': session.formateur.id}) }}">{{ session.formateur }}</a> </p>
    <p> Date début: {{ session.dateDebut| date('d-m-Y')}} </p>
    <p> Date fin: {{ session.dateFin| date('d-m-Y')}} </p>
    <p> Inscrit: {{ session.stagiaires | length }}/{{ session.placeTotal }} </p>
    {% if session.stagiaires | length == session.placeTotal %}
            <p class="complet"> Complet</p>
        {% else %}
            <p class="incomplet"> Incomplet</p>
    {% endif %}


    <h2>Stagiare inscrit</h2>
    <table>

        <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Ajouté</th>
        </tr>
        

        {% for stagiaire in session.stagiaires %}
            <tr>
                <td><a href="{{ path('show_stagiaire' ,{'id': stagiaire.id}) }}">{{stagiaire.nom}}<a></td>

                <td><a href="{{ path('show_stagiaire' ,{'id': stagiaire.id}) }}">{{stagiaire.prenom}}<a></td>

                <th><a href="{{ path('remove_stagiaire' ,{'stagiaire_id': stagiaire.id,'session_id': session.id}) }}"><i class="fa-solid fa-minus"></i></a></th>
            </tr>    
        {% endfor %}
        
    </table>

    
    <h2>Stagiare non-inscrit</h2>
    <table>

        <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Ajouté</th>
        </tr>

        {% for stagiaire in stagiairesNI %}
            <tr>
                <td><a href="{{ path('show_stagiaire' ,{'id': stagiaire.id}) }}">{{stagiaire.nom}}</a></td>

                <td><a href="{{ path('show_stagiaire' ,{'id': stagiaire.id}) }}">{{stagiaire.prenom}}</a></td>

                <td><a href="{{ path('add_Stagiaire' ,{'stagiaire_id': stagiaire.id,'session_id': session.id}) }}"><i class="fa-solid fa-plus"></i></a></td>
            </tr>
        {% endfor %}
        

    </table>


    
    <h2>Modulé ajouté</h2>
    <table>
        <tr>
            <th>Nom</th>
            <th>Retiré</th>
        </tr>
        
        {% for programme in session.programmes %}
            <tr>
                <td>{{programme.module.nom}}</td>
                <td><a href="{{ path('remove_Programme' ,{'programme_id': programme.id,'session_id': session.id}) }}"><i class="fa-solid fa-minus"></i></a></td>
            </tr>
        {% endfor %}
        
    </table>


    

    <h2>Module ajoutable</h2>
    <table>
        <tr>
            <th>Nom</th>
            <th>Jour</th>
            <th>Ajouté</th>
        </tr>
        
        {% for module in moduleAjoutable %}
            <form action="{{ path('add_Programme' ,{'module_id': module.id,'session_id': session.id}) }}" method="post" id="". module.nom ."" >

                <tr>
                    <td>{{ module.nom}}</td>
                    <td><input type="number" name="jour"></td>
                    <td><input type="submit" value="ajouter module" id="". module.nom .""></i></td>
                </tr>

            </form>
            
        {% endfor %}
    </table>
    </div>
{% endblock %}
